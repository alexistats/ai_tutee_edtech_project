{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Multiple Choice Question Test Schema",
  "description": "Schema for pre/post tests with multiple choice questions",
  "type": "object",
  "required": ["test_id", "scenario", "test_type", "questions"],
  "properties": {
    "test_id": {
      "type": "string",
      "description": "Unique identifier for this test"
    },
    "scenario": {
      "type": "string",
      "description": "The scenario this test is associated with"
    },
    "test_type": {
      "type": "string",
      "enum": ["pre_test", "post_test"],
      "description": "Whether this is a pre-test or post-test"
    },
    "description": {
      "type": "string",
      "description": "Optional description of what this test assesses"
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["question_id", "question_text", "options", "correct_answer"],
        "properties": {
          "question_id": {
            "type": "string",
            "description": "Unique identifier for this question"
          },
          "question_text": {
            "type": "string",
            "description": "The question to ask the student"
          },
          "options": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "object",
              "required": ["option_id", "text"],
              "properties": {
                "option_id": {
                  "type": "string",
                  "description": "Option identifier (e.g., 'A', 'B', 'C', 'D')"
                },
                "text": {
                  "type": "string",
                  "description": "The option text"
                }
              }
            }
          },
          "correct_answer": {
            "type": "string",
            "description": "The option_id of the correct answer"
          },
          "explanation": {
            "type": "string",
            "description": "Optional explanation for why this is the correct answer"
          },
          "subskill": {
            "type": "string",
            "description": "Optional subskill this question assesses"
          }
        }
      }
    }
  }
}
